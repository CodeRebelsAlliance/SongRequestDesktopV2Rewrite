<Window x:Class="SongRequestDesktopV2Rewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="SongRequest V2"
        Width="780" Height="480"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f10"
        Foreground="White"
        FontFamily="Segoe UI" Topmost="True" Icon="/SRshortLogo.png" ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <SolidColorBrush x:Key="ControlBorder" Color="#303030"/>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0"/>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.36"/>
                    <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.36" BeginTime="0:0:0.08" />
                    <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.36" BeginTime="0:0:0.08" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="12">
        <Border x:Name="MainCard" Style="{StaticResource CardBorder}" Background="{StaticResource PanelBackground}" Padding="16">
            <Border.RenderTransform>
                <TranslateTransform Y="12"/>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Image Source="/SRshortLogo.png" Width="36" Height="36" Margin="0,0,8,0"/>
                    <TextBlock Text="Technik AG" FontFamily="Segoe UI Black" FontSize="26" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Logging in automatically..." FontSize="20" Margin="0,4"/>

                        <Border Background="#151515" CornerRadius="8" Padding="12" Margin="0,12,0,0" BorderBrush="{StaticResource ControlBorder}" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Admin password" Foreground="#BBBBBB" FontSize="12"/>
                                <PasswordBox Name="PasswordBox_TechnikPassword" Height="36" MaxLength="12" Background="#0f0f10" Foreground="White" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#151515" CornerRadius="8" Padding="12" Margin="0,12,0,0" BorderBrush="{StaticResource ControlBorder}" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <PasswordBox Name="PasswordBox_SecretKey" Width="320" Height="36" MaxLength="12" Background="#0f0f10" Foreground="White" IsEnabled="False" Visibility="Collapsed"/>
                                <Button Name="Button_ChooseFile" Content="Choose File" Width="120" Height="36" Margin="8,0,0,0" Style="{StaticResource RoundedButton}" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>

                        <CheckBox Name="CheckBox_UseDefaultKey" Content="Use default key file" Margin="0,12,0,0" IsChecked="True" IsEnabled="False" Visibility="Collapsed"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                        <Button Content="Start" Width="160" Height="44" Style="{StaticResource RoundedButton}" Margin="0,0,0,8"/>
                        <Button Content="Settings" Width="160" Height="44" Style="{StaticResource RoundedButton}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
