<Window x:Class="SongRequestDesktopV2Rewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="SongRequest V2"
        Width="600" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f10"
        Foreground="White"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        Icon="/SRshortLogo.png">

    <Window.Resources>
        <!-- Fade in animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="#0f0f10" CornerRadius="15" BorderBrush="#2C2C2C" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <!-- Content Area -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo -->
                <Viewbox Width="480" Height="180" Margin="0,0,0,30">
                    <Image Source="/SRLoader.gif" 
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Stretch="Uniform"/>
                </Viewbox>

                <!-- Title -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Technik-AG " 
                               FontFamily="Segoe UI Black" 
                               FontSize="36" 
                               Foreground="#E0E0E0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Song" 
                               FontFamily="Segoe UI Black" 
                               FontSize="36" 
                               Foreground="#FFD700"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Request" 
                               FontFamily="Segoe UI Black" 
                               FontSize="36" 
                               Foreground="#FFA500"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Version -->
                <TextBlock x:Name="VersionText"
                           Text="Version 2.0"
                           FontSize="14"
                           Foreground="#808080"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Status Text -->
                <TextBlock x:Name="StatusText"
                           Text="Initializing..."
                           FontSize="16"
                           Foreground="#AAAAAA"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>
            </StackPanel>

            <Image Grid.Row="1" Source="/Artboard1@3x.png" Width="Auto" Height="100px"></Image>
            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,15">
                <Run Text="© 2026 CodeRebelsAlliance (leMineGaming and Contributors)" 
                     Foreground="#666666"
                     FontSize="12"/>
            </TextBlock>
            

            <!-- Loading Bar -->
            <Border Grid.Row="2" 
                    Background="#1a1a1a" 
                    CornerRadius="8" 
                    Height="12"
                    BorderBrush="#2C2C2C"
                    BorderThickness="1"
                    VerticalAlignment="Bottom">
                <Grid ClipToBounds="True">
                    <!-- Progress Fill -->
                    <Border x:Name="ProgressFill"
                            Background="#5B8DEF"
                            CornerRadius="7"
                            HorizontalAlignment="Left"
                            Width="0">
                        <Border.Effect>
                            <DropShadowEffect Color="#5B8DEF" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>

                    <!-- Shimmer Effect -->
                    <Rectangle x:Name="Shimmer"
                               Fill="White"
                               Opacity="0.2"
                               HorizontalAlignment="Left"
                               Width="80"
                               Margin="-80,0,0,0">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="ShimmerTransform"/>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
