<Window x:Class="SongRequestDesktopV2Rewrite.MusicShare"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="Music Share - SongRequest" Height="600" Width="900" MinWidth="700" MinHeight="400" 
        Background="#121212" Icon="/SRshortLogo.png" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Theme brushes -->
        <SolidColorBrush x:Key="WindowBackground" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <SolidColorBrush x:Key="ControlBorder" Color="#303030"/>
        <SolidColorBrush x:Key="AccentButtonBackground" Color="#FF5B8DEF"/>
        <SolidColorBrush x:Key="AccentButtonHover" Color="#FF7AD1FF"/>
        <SolidColorBrush x:Key="DangerButtonBackground" Color="#FFE45757"/>
        <SolidColorBrush x:Key="DangerButtonHover" Color="#FFFF7B7B"/>
        <SolidColorBrush x:Key="SuccessButtonBackground" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#FF66D17C"/>
        <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#505050"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#6A6A6A"/>

        <!-- Rounded button base -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource AccentButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource DangerButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource DangerButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5B8DEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#101010">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0" Margin="6" Style="{StaticResource CardBorder}" Padding="0">
            <DockPanel Background="Transparent" LastChildFill="True" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="2,0">
                    <Image Width="34" Height="32" Stretch="Fill" Margin="10,0" Source="/SRshortLogo.png"/>
                    <TextBlock Text="Technik-AG" FontFamily="Segoe UI Black" FontSize="16"
                               VerticalAlignment="Center" Margin="8,0, 4, 0" Foreground="Silver"/>
                    <TextBlock Text="Song" FontFamily="Segoe UI Black" FontSize="22"
                               VerticalAlignment="Center" Margin="2, 0,0, 0" Foreground="Yellow"/>
                    <TextBlock Text="Request" FontFamily="Segoe UI Black" FontSize="22"
                               VerticalAlignment="Center" Margin="0, 0,2, 0" Foreground="Orange"/>
                    <TextBlock Text=" - Music Share" FontFamily="Segoe UI Black" FontSize="22"
                               VerticalAlignment="Center" Margin="0, 0,2, 0" Foreground="White"/>
                </StackPanel>

                <!-- Close button -->
                <Button x:Name="CloseButton" 
                        Content="Close" 
                        Width="80" 
                        Height="30"
                        DockPanel.Dock="Left"
                        Margin="0,0,8,0"
                        Style="{StaticResource DangerButton}" 
                        Click="CloseButton_Click"/>
            </DockPanel>
        </Border>

        <!-- Content area -->
        <Border Grid.Row="1" Margin="12" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sharing Mode Panel -->
                <Border Grid.Column="0" Margin="0,0,6,0" Style="{StaticResource CardBorder}" Background="#1A1A1A">
                    <StackPanel>
                        <TextBlock Text="Sharing Mode" FontSize="24" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <TextBlock Text="Share your music playback with others" FontSize="14" Foreground="#BBBBBB" 
                                   TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <!-- Share ID Display -->
                        <Border x:Name="ShareIdBorder" Background="#2A2A2A" CornerRadius="8" Padding="20" 
                                Margin="20,0,20,20" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Share ID:" FontSize="14" Foreground="#999999" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock x:Name="ShareIdText" Text="000000" FontSize="48" FontWeight="Bold" 
                                           Foreground="#5B8DEF" HorizontalAlignment="Center" 
                                           FontFamily="Consolas" Margin="0,0,0,8"/>
                                <TextBlock Text="Share this ID with others" FontSize="12" Foreground="#666666" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Status Display -->
                        <Border x:Name="ShareStatusBorder" Background="#2A2A2A" CornerRadius="8" Padding="12" 
                                Margin="20,0,20,20" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Ellipse x:Name="ShareStatusIndicator" Width="12" Height="12" Fill="#4CAF50" 
                                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ShareStatusText" Text="Sharing Active" FontSize="14" 
                                               Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock x:Name="ShareStatsText" Text="Streaming..." FontSize="12" 
                                           Foreground="#999999" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Start/Stop Share Button -->
                        <Button x:Name="StartShareButton" Content="Start Sharing" Width="200" Height="40" 
                                Margin="0,20,0,0" Style="{StaticResource AccentButton}" 
                                Click="StartShareButton_Click" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Receiving Mode Panel -->
                <Border Grid.Column="1" Margin="6,0,0,0" Style="{StaticResource CardBorder}" Background="#1A1A1A">
                    <StackPanel>
                        <TextBlock Text="Receiving Mode" FontSize="24" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <TextBlock Text="Listen to someone else's music" FontSize="14" Foreground="#BBBBBB" 
                                   TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <!-- Share ID Input -->
                        <Border x:Name="ShareIdInputBorder" Background="#2A2A2A" CornerRadius="8" Padding="20" 
                                Margin="20,0,20,20">
                            <StackPanel>
                                <TextBlock Text="Enter Share ID:" FontSize="14" Foreground="#999999" 
                                           HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                <TextBox x:Name="ShareIdInput" MaxLength="6" 
                                         Style="{StaticResource RoundedTextBox}"
                                         TextChanged="ShareIdInput_TextChanged"
                                         PreviewTextInput="ShareIdInput_PreviewTextInput"/>
                            </StackPanel>
                        </Border>

                        <!-- Receive Status Display -->
                        <Border x:Name="ReceiveStatusBorder" Background="#2A2A2A" CornerRadius="8" Padding="12" 
                                Margin="20,0,20,20" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Ellipse x:Name="ReceiveStatusIndicator" Width="12" Height="12" Fill="#4CAF50" 
                                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ReceiveStatusText" Text="Connected" FontSize="14" 
                                               Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock x:Name="ReceiveStatsText" Text="Buffering..." FontSize="12" 
                                           Foreground="#999999" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                                <!-- Show Presentation Button -->
                                <Button x:Name="ShowPresentationButton" Content="ðŸ“º Show Presentation" Width="180" Height="35"
                                        Style="{StaticResource AccentButton}" Click="ShowPresentationButton_Click"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Audio Receive Toggle -->
                        <CheckBox x:Name="ReceiveAudioCheckBox" Content="ðŸ”Š Receive Audio" 
                                  IsChecked="True" Foreground="White" FontSize="14" 
                                  HorizontalAlignment="Center" Margin="0,15,0,0"
                                  ToolTip="When checked, you will hear the shared music. When unchecked, only metadata (song info, lyrics) will be received."/>

                        <!-- Start/Stop Receive Button -->
                        <Button x:Name="StartReceiveButton" Content="Start Receiving" Width="200" Height="40" 
                                Margin="0,20,0,0" Style="{StaticResource AccentButton}" 
                                Click="StartReceiveButton_Click" FontSize="16" IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
