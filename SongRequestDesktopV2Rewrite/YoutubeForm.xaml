<Window x:Class="SongRequestDesktopV2Rewrite.YoutubeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="Main Window - SongRequest"
        Width="1484" Height="761"
        MinWidth="1500" MinHeight="800"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        Foreground="White"
        Opacity="0" Icon="/SRshortLogo.png" Closing="Window_Closing">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Theme brushes -->
        <SolidColorBrush x:Key="WindowBackground" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF5B8DEF" Offset="0.0"/>
            <GradientStop Color="#FF7AD1FF" Offset="1.0"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ControlHover" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ControlBorder" Color="#303030"/>

        <!-- Button color resources -->
        <SolidColorBrush x:Key="AccentButtonBackground" Color="#FF5B8DEF"/>
        <SolidColorBrush x:Key="AccentButtonHover" Color="#FF7AD1FF"/>
        <SolidColorBrush x:Key="DangerButtonBackground" Color="#FFE45757"/>
        <SolidColorBrush x:Key="DangerButtonHover" Color="#FFFF7B7B"/>
        <SolidColorBrush x:Key="SuccessButtonBackground" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#FF66D17C"/>
        <SolidColorBrush x:Key="WarningButtonBackground" Color="#FFFFB020"/>
        <SolidColorBrush x:Key="WarningButtonHover" Color="#FFFFC658"/>
        <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#505050"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#6A6A6A"/>

        <!-- Modern rounded button (includes click popout and loading overlay) -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Visual content -->
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="15"
                                    SnapsToDevicePixels="True"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>

                            <!-- Loading overlay (ProgressBar indeterminate) -->
                            <Grid x:Name="BtnLoadingOverlay" Visibility="{Binding Path=(local:UIHelpers.IsLoading), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis}}"
                                  Background="#80000000" IsHitTestVisible="False">
                                <ProgressBar Width="48" Height="12" IsIndeterminate="True" Foreground="White"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- hover only scales; color hover handled by derived styles -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.03" Duration="0:0:0.14" />
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.03" Duration="0:0:0.14" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.0" Duration="0:0:0.14" />
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.0" Duration="0:0:0.14" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- click "popout" (small size change) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.96" Duration="0:0:0.06" />
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.96" Duration="0:0:0.06" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.0" Duration="0:0:0.12" />
                                            <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.0" Duration="0:0:0.12" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Colored button styles (based on RoundedButton) -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource AccentButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource DangerButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource DangerButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SuccessButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SuccessButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource WarningButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource WarningButtonBackground}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource WarningButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource WarningButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SecondaryButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Rounded text box style -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Subtle card animation for content panels -->
        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="4" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0"/>
        </Style>

        <!-- Small helper style for icon-like narrow buttons -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="95"/>
            <Setter Property="Height" Value="36"/>
        </Style>

    </Window.Resources>

    <!-- Fade-in and slide-up on load (unchanged) -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Window fade -->
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.28"/>
                    <!-- Logo fade -->
                    <DoubleAnimation Storyboard.TargetName="LogoImage" Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.30" BeginTime="0:0:0.05"/>
                    <!-- Top/Left/Right/Bottom card animations unchanged -->
                    <DoubleAnimation Storyboard.TargetName="TopBarBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 To="0" Duration="0:0:0.34" BeginTime="0:0:0.08"/>
                    <DoubleAnimation Storyboard.TargetName="TopBarBorder" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.34" BeginTime="0:0:0.08"/>
                    <DoubleAnimation Storyboard.TargetName="LeftCardBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 To="0" Duration="0:0:0.34" BeginTime="0:0:0.12"/>
                    <DoubleAnimation Storyboard.TargetName="LeftCardBorder" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.34" BeginTime="0:0:0.12"/>
                    <DoubleAnimation Storyboard.TargetName="RightCardBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 To="0" Duration="0:0:0.34" BeginTime="0:0:0.16"/>
                    <DoubleAnimation Storyboard.TargetName="RightCardBorder" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.34" BeginTime="0:0:0.16"/>
                    <DoubleAnimation Storyboard.TargetName="BottomCardBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 To="0" Duration="0:0:0.34" BeginTime="0:0:0.20"/>
                    <DoubleAnimation Storyboard.TargetName="BottomCardBorder" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.34" BeginTime="0:0:0.20"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border x:Name="TopBarBorder" Grid.Row="0" Margin="6" Style="{StaticResource CardBorder}">
            <DockPanel Background="Transparent" LastChildFill="True" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="2,0">
                    <Image x:Name="LogoImage" Width="34" Height="32" Stretch="Fill" Margin="4,0" Source="/SRshortLogo.png" MouseDown="LogoImage_MouseDown"/>
                    <TextBlock Text="Technik-AG" FontFamily="Segoe UI Black" FontSize="16"
                               VerticalAlignment="Center" Margin="8,0, 4, 0" MouseDown="TextBlock_MouseDown" Foreground="Silver"/>
                    <TextBlock Text="Song" FontFamily="Segoe UI Black" FontSize="22"
                               VerticalAlignment="Center" Margin="2, 0,0, 0" MouseDown="TextBlock_MouseDown" Foreground="Yellow"/>
                    <TextBlock Text="Request" FontFamily="Segoe UI Black" FontSize="22"
                               VerticalAlignment="Center" Margin="0, 0,2, 0" MouseDown="TextBlock_MouseDown" Foreground="Orange"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="6,0">
                    <Button x:Name="SubmitSongButton" Content="➕ Submit Song" Width="140" Height="30" Margin="4,0"
                            Click="SubmitSongButton_Click" Style="{StaticResource AccentButton}"/>
                    <Button x:Name="FetchDataButton" Content="Fetch Data" Width="100" Height="30" Margin="4,0"
                            Click="FetchDataButton_Click" Style="{StaticResource AccentButton}"/>
                    <Button x:Name="SettingsButton" Content="Settings" Width="100" Height="30" Margin="4,0"
                            Click="SettingsButton_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="SwitchListButton" Content="Toggle View" Width="100" Height="30" Margin="4,0"
                            Click="SwitchListButton_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="MusicPlayerButton" Content="Music Player" Width="100" Height="30" Margin="4,0"
                            Click="MusicPlayerButton_Click" Style="{StaticResource SuccessButton}"/>
                </StackPanel>

                <!-- Empty space in center (URL TextBox removed) -->
                <Border DockPanel.Dock="Left" Background="Transparent" MinWidth="200"/>
            </DockPanel>
        </Border>

        <!-- Main content: left = lists, middle = splitter, right = lyrics/settings -->
        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <!-- lyrics panel min width set to 370 -->
                <ColumnDefinition Width="Auto" MinWidth="370"/>
            </Grid.ColumnDefinitions>

            <!-- Left: primary lists inside a card -->
            <Border x:Name="LeftCardBorder" Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,8,0">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="8, 2">
                        <TextBlock x:Name="ViewLabel" Text="Normal List" FontFamily="Segoe UI" FontWeight="Bold" FontSize="19"/>
                        <Button x:Name="SortButton" Content="Sort by" Width="80" Height="28" Margin="12,0"
                                Click="SortButton_Click" VerticalAlignment="Center" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>

                    <!-- Wrap the video list in a host Grid so we can toggle panel loading overlay -->
                    <Grid x:Name="VideoListHost" Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="Visible" x:Name="ListViewer">
                            <StackPanel x:Name="VideoListPanel" Orientation="Vertical" Margin="6"/>
                        </ScrollViewer>

                        <!-- Collapsed blacklist scrollviewer left as-is -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="Collapsed" x:Name="BlackListViewer">
                            <StackPanel x:Name="VideoBlackListPanel" Orientation="Vertical" Margin="6"/>
                        </ScrollViewer>

                        <!-- Panel loading overlay (binds to UIHelpers.IsLoading on VideoListHost) -->
                        <Grid Visibility="{Binding Path=(local:UIHelpers.IsLoading), ElementName=VideoListHost, Converter={StaticResource BoolToVis}}"
                              Background="#80000000" IsHitTestVisible="False">
                            <ProgressBar Width="220" Height="16" IsIndeterminate="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="Transparent" ShowsPreview="True" Cursor="SizeWE"/>

            <!-- Right: lyrics panel & integrated settings overlay -->
            <Border x:Name="RightCardBorder" Grid.Column="2" Style="{StaticResource CardBorder}" MinWidth="370">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="56"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="64"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="Label1" Grid.Row="0" Text="Lyrics Analysetool"
                               FontFamily="Segoe UI Black" FontSize="20" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="LyricsSongTitle" Grid.Row="1" Text="Song Title"
                               FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,6"/>

                    <RichTextBox x:Name="LyricsText" Grid.Row="2" Background="Black" Foreground="White"
                                 IsReadOnly="True" FontSize="14" Margin="0,6" BorderThickness="0" />

                    <WrapPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="2,0">
                        <Button x:Name="LyricsRefreshButton" Content="Refresh Filter" Width="140" Margin="4,1" Style="{StaticResource AccentButton}" Click="LyricsRefreshButton_Click"/>
                        <Button x:Name="LyricsBlockButton" Content="Block" Width="80" Margin="4,1" Style="{StaticResource DangerButton}" Click="LyricsBlockButton_Click"/>
                        <Button x:Name="LyricsUnblockButton" Content="Unblock" Width="100" Margin="4,1" Style="{StaticResource SuccessButton}" Click="LyricsUnblockButton_Click"/>
                        <Button x:Name="LyricsLookupButton" Content="Lookup" Width="95" Margin="4,1" Style="{StaticResource AccentButton}" Click="LyricsLookupButton_Click"/>
                        <Button x:Name="LyricsCloseButton" Content="X" Width="45" Margin="4,1" Style="{StaticResource DangerButton}" Click="LyricsCloseButton_Click"/>
                        <TextBlock x:Name="ProblemsLabel" Text="0 Problems with lyrics found"
                                   VerticalAlignment="Center" Margin="8,1"/>
                    </WrapPanel>

                    <ContentControl x:Name="IntegratedSettingsHost" Grid.RowSpan="4" Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom: Console as rounded card with status + clock -->
        <Border x:Name="BottomCardBorder" Grid.Row="2" Margin="6, 2" Style="{StaticResource CardBorder}">
            <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="6, 0">
                <!-- Left: console text area -->
                <RichTextBox x:Name="ConsoleTextBox" Background="#202020" FontFamily="Consolas"
                         VerticalScrollBarVisibility="Auto" IsReadOnly="True" BorderThickness="0"
                         DockPanel.Dock="Left" Width="1100" Margin="0,0,8,0">
                    <FlowDocument>
                        <Paragraph>
                            <Run Foreground="White" Text="Console initialized."/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <!-- Right: internet status + clock -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right">
                    <!-- Internet status (dynamic) -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <Ellipse x:Name="StatusIndicator" Width="16" Height="16" Fill="#FFFFA500" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText" Text="Connecting" FontSize="16" FontWeight="Bold" Foreground="#FFFFA500" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Clock -->
                    <TextBlock x:Name="ClockText" FontFamily="Consolas" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>