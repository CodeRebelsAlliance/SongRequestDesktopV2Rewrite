<Window x:Class="SongRequestDesktopV2Rewrite.VisualizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Audio Visualizer - SongRequest" 
        Height="600" Width="800" 
        MinWidth="600" MinHeight="400"
        Background="Black" 
        Icon="/SRshortLogo.png"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="VisualizerButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveVisualizerButton" TargetType="Button" BasedOn="{StaticResource VisualizerButton}">
            <Setter Property="Background" Value="#5B8DEF"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Control Bar -->
        <Border Grid.Row="0" Background="#1A1A1A" Padding="12" BorderBrush="#303030" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="SpectrumButton" Content="ðŸ“Š Spectrum" Style="{StaticResource ActiveVisualizerButton}" Click="SpectrumButton_Click"/>
                <Button x:Name="WaveformButton" Content="ã€°ï¸ Waveform" Style="{StaticResource VisualizerButton}" Click="WaveformButton_Click"/>
                <Button x:Name="CircularButton" Content="â­• Circular" Style="{StaticResource VisualizerButton}" Click="CircularButton_Click"/>
                <Button x:Name="VUMeterButton" Content="ðŸ“‰ VU Meter" Style="{StaticResource VisualizerButton}" Click="VUMeterButton_Click"/>
                <Button x:Name="ParticlesButton" Content="âœ¨ Particles" Style="{StaticResource VisualizerButton}" Click="ParticlesButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Visualization Canvas -->
        <Canvas x:Name="VisualizationCanvas" Grid.Row="1" Background="Black" ClipToBounds="True"/>
    </Grid>
</Window>
