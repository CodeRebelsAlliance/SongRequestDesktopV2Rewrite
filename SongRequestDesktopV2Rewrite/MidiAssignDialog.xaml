<Window x:Class="SongRequestDesktopV2Rewrite.MidiAssignDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Assign MIDI Control" 
        Height="600" 
        Width="480" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="#121212"
        Icon="/SRshortLogo.png">
    
    <Window.Resources>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="#303030"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FF5B8DEF"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF7AD1FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF4A7DCF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#404040"/>
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#505050"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#6A6A6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#101010" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="ðŸŽ¹ MIDI Assignment" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Configure MIDI controller mapping" 
                       FontSize="12" 
                       Foreground="#999999"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}">
            <StackPanel>
                <!-- Status Display -->
                <Border Background="#1A1A1A" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <TextBlock x:Name="StatusText" 
                               Text="Waiting for MIDI input..." 
                               FontSize="14"
                               Foreground="#5B8DEF"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               LineHeight="22"/>
                </Border>

                <!-- Feedback Settings -->
                <TextBlock Text="LED Feedback Settings" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,0,12"/>

                <!-- Pressed Velocity -->
                <Border Background="#1A1A1A" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Pressed State (LED On)" 
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Margin="0,0,0,6"/>
                            <Slider x:Name="VelocityPressedSlider" 
                                    Minimum="0" 
                                    Maximum="127" 
                                    Value="127"
                                    IsEnabled="False"
                                    ValueChanged="VelocityPressedSlider_ValueChanged"/>
                        </StackPanel>

                        <TextBlock x:Name="VelocityPressedLabel" 
                                   Grid.Column="1"
                                   Text="127" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   VerticalAlignment="Center"
                                   Width="40"
                                   TextAlignment="Right"
                                   Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Unpressed Velocity -->
                <Border Background="#1A1A1A" CornerRadius="6" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Unpressed State (LED Off/Dim)" 
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Margin="0,0,0,6"/>
                            <Slider x:Name="VelocityUnpressedSlider" 
                                    Minimum="0" 
                                    Maximum="127" 
                                    Value="0"
                                    IsEnabled="False"
                                    ValueChanged="VelocityUnpressedSlider_ValueChanged"/>
                        </StackPanel>

                        <TextBlock x:Name="VelocityUnpressedLabel" 
                                   Grid.Column="1"
                                   Text="0" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#999999"
                                   VerticalAlignment="Center"
                                   Width="40"
                                   TextAlignment="Right"
                                   Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Help Text -->
                <TextBlock Text="Note: Velocity 0 = LED off, 127 = LED brightest" 
                           FontSize="11"
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Launchpad X: Velocity values map to color palette (0-127)" 
                           FontSize="10"
                           Foreground="#555555"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="100" 
                    Height="36"
                    Margin="0,0,8,0"
                    Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"/>
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="100" 
                    Height="36"
                    Style="{StaticResource AccentButton}"
                    IsEnabled="False"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
