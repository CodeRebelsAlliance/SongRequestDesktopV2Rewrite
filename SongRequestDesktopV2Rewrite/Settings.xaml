<Window x:Class="SongRequestDesktopV2Rewrite.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="Settings - SongRequest" Height="520" Width="900" Background="#121212" Foreground="White" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Minimal set of shared brushes and styles copied from YoutubeForm to keep styling consistent -->
        <SolidColorBrush x:Key="WindowBackground" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <SolidColorBrush x:Key="ControlBorder" Color="#303030"/>
        <SolidColorBrush x:Key="AccentButtonBackground" Color="#FF5B8DEF"/>
        <SolidColorBrush x:Key="AccentButtonHover" Color="#FF7AD1FF"/>
        <SolidColorBrush x:Key="DangerButtonBackground" Color="#FFE45757"/>
        <SolidColorBrush x:Key="DangerButtonHover" Color="#FFFF7B7B"/>
        <SolidColorBrush x:Key="SuccessButtonBackground" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#FF66D17C"/>
        <SolidColorBrush x:Key="WarningButtonBackground" Color="#FFFFB020"/>
        <SolidColorBrush x:Key="WarningButtonHover" Color="#FFFFC658"/>
        <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#505050"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#6A6A6A"/>

        <!-- Rounded button base -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource AccentButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource DangerButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource DangerButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SuccessButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SuccessButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource WarningButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource WarningButtonBackground}"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource WarningButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource WarningButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryButtonBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource SecondaryButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Border Style="{StaticResource CardBorder}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Application Settings" FontFamily="Segoe UI Black" FontSize="20" HorizontalAlignment="Left" />

                <!-- Config fields -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,12" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                        <TextBlock Text="Fetching Timer (s)"/>
                        <TextBox x:Name="FetchingTimerBox" Width="140" Style="{StaticResource RoundedTextBox}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                        <TextBlock Text="Concurrent Threads"/>
                        <TextBox x:Name="ThreadsBox" Width="140" Style="{StaticResource RoundedTextBox}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Default Sorting"/>
                        <TextBox x:Name="DefaultSortingBox" Width="200" Style="{StaticResource RoundedTextBox}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                        <TextBlock Text="Presentation Mode"/>
                        <CheckBox x:Name="PresentationFullscreenCheckBox" Content="Fullscreen" Foreground="White" VerticalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                        <TextBlock Text="Audio Settings"/>
                        <CheckBox x:Name="NormalizeVolumeCheckBox" Content="Normalize Volume" Foreground="White" VerticalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="12,0,0,0">
                        <TextBlock Text="Server Status"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <CheckBox x:Name="SendinAllowedCheckBox" Content="Sending Allowed" Foreground="White" VerticalAlignment="Center" IsEnabled="False"/>
                            <Button x:Name="ToggleSendinButton" Content="Toggle" Width="80" Height="28" Margin="8,0,0,0" Style="{StaticResource WarningButton}" Click="ToggleSendinButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Middle area: address, token and console controls -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="Server Address"/>
                        <TextBox x:Name="AddressBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Text="Bearer Token OR JWT Authentication" Margin="0,8,0,0"/>
                        <TextBox x:Name="TokenBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Text="Presentation Request URL (QR Code)" Margin="0,8,0,0"/>
                        <TextBox x:Name="RequestUrlBox" Style="{StaticResource RoundedTextBox}" Text="https://example.com/request"/>

                        <WrapPanel Margin="0,12,0,0" HorizontalAlignment="Left">
                            <Button x:Name="SaveButton" Content="Save" Width="110" Margin="6,0" Style="{StaticResource SuccessButton}" Click="SaveButton_Click"/>
                            <Button x:Name="ReloadButton" Content="Reload" Width="110" Margin="6,0" Style="{StaticResource SecondaryButton}" Click="ReloadButton_Click"/>
                            <Button x:Name="CloseButton" Content="Close" Width="110" Margin="6,0" Style="{StaticResource DangerButton}" Click="CloseButton_Click"/>
                            <Button x:Name="RegisterAuth" Content="Authenticate" Width="146" Style="{StaticResource AccentButton}" Click="RegisterAuth_OnClick"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Console interaction panel -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="12,0,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Console" FontWeight="Bold"/>
                            <WrapPanel Margin="0,8,0,0">
                                <Button x:Name="ClearConsoleButton" Content="Clear Console" Width="120" Style="{StaticResource DangerButton}" Click="ClearConsoleButton_Click"/>
                                <Button x:Name="AppendConsoleButton" Content="Append" Width="120" Margin="8,0,0,0" Style="{StaticResource AccentButton}" Click="AppendConsoleButton_Click"/>
                            </WrapPanel>

                            <TextBox x:Name="AppendTextBox" Style="{StaticResource RoundedTextBox}" Margin="0,8,0,0" Text="Test message from Settings"/>

                            <TextBlock Text="Console Foreground" Margin="0,8,0,0"/>
                            <ComboBox x:Name="ConsoleColorCombo" SelectedIndex="0">
                                <ComboBoxItem>Red</ComboBoxItem>
                                <ComboBoxItem>White</ComboBoxItem>
                            </ComboBox>
                            <Button x:Name="ApplyColorButton" Content="Apply Color" Width="120" Margin="0,8,0,0" Style="{StaticResource SecondaryButton}" Click="ApplyColorButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Footer status -->
                <TextBlock x:Name="StatusText" Grid.Row="3" Text="" Foreground="LightGray" Margin="4,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
