<Window x:Class="SongRequestDesktopV2Rewrite.UpdatePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SongRequestDesktopV2Rewrite"
        mc:Ignorable="d"
        Title="Update Available" 
        Height="500" 
        Width="550"
        Background="#121212" 
        Foreground="White" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <SolidColorBrush x:Key="AccentButtonBackground" Color="#FF5B8DEF"/>
        <SolidColorBrush x:Key="AccentButtonHover" Color="#FF7AD1FF"/>
        <SolidColorBrush x:Key="SuccessButtonBackground" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#FF66D17C"/>
        <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#505050"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#6A6A6A"/>

        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource AccentButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SuccessButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBackground}" CornerRadius="15" BorderBrush="#404040" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with icon and title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Ellipse Width="48" Height="48" Fill="#FF4CAF50" Margin="0,0,15,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#FF4CAF50" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="ðŸ“¦" FontSize="28" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="-62,4,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Update Available" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="VersionInfo" Text="New Version: v1.0.0" FontSize="12" Foreground="#999" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Message -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock x:Name="UpdateMessage" 
                           Text="A new version of SongRequest is available!" 
                           FontSize="14" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Would you like to download and install it now?" 
                           FontSize="14" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Release Notes Section -->
                <TextBlock Text="What's New:" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="White" 
                           Margin="0,0,0,8"/>
                <Border Background="#181818" 
                        BorderBrush="#404040" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                        <TextBox x:Name="ReleaseNotesTextBox"
                                 Background="Transparent"
                                 Foreground="#CCCCCC"
                                 FontSize="12" FontFamily="Consolas, Courier New, monospace"
                                 BorderThickness="0"
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Disabled"
                                 Text="Loading release notes..."/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Progress Bar (hidden initially) -->
            <StackPanel x:Name="ProgressPanel" Grid.Row="2" Margin="0,0,0,15" Visibility="Collapsed">
                <TextBlock x:Name="ProgressText" Text="Downloading..." FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
                <ProgressBar x:Name="DownloadProgress" Height="8" Minimum="0" Maximum="100" Value="0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RemindLaterButton" 
                        Content="Remind Me Later" 
                        Width="140" 
                        Margin="0,0,10,0" 
                        Style="{StaticResource SecondaryButton}" 
                        Click="RemindLaterButton_Click"/>
                <Button x:Name="InstallNowButton" 
                        Content="Install Now" 
                        Width="120" 
                        Style="{StaticResource SuccessButton}" 
                        Click="InstallNowButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

