<Window x:Class="SongRequestDesktopV2Rewrite.SoundboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Soundboard - SongRequest" 
        Height="700" Width="900" 
        MinWidth="600" MinHeight="500"
        Background="#121212" 
        Icon="/SRshortLogo.png"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <!-- Theme brushes -->
        <SolidColorBrush x:Key="WindowBackground" Color="#121212"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#202020"/>
        <SolidColorBrush x:Key="ControlBorder" Color="#303030"/>
        <SolidColorBrush x:Key="AccentButtonBackground" Color="#FF5B8DEF"/>
        <SolidColorBrush x:Key="AccentButtonHover" Color="#FF7AD1FF"/>
        <SolidColorBrush x:Key="SuccessButtonBackground" Color="#FF4CAF50"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#FF66D17C"/>
        <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#505050"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#6A6A6A"/>

        <!-- Button Styles -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource AccentButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="{StaticResource SuccessButtonBackground}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessButtonHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Soundboard Button Style with States and Playback Bar -->
        <Style x:Key="SoundboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="AllowDrop" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="MainBorder" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="6"/>
                                    </Grid.RowDefinitions>

                                    <!-- Content Area -->
                                    <Grid Grid.Row="0">
                                        <!-- Pressed State Overlay -->
                                        <Border x:Name="PressedOverlay" 
                                                Background="#40FFFFFF" 
                                                CornerRadius="12,12,0,0"
                                                Opacity="0"/>

                                        <!-- Drag-Over Overlay -->
                                        <Border x:Name="DragOverOverlay" 
                                                Background="#4076D17C" 
                                                CornerRadius="12,12,0,0"
                                                Opacity="0"/>

                                        <!-- Button Content -->
                                        <Grid Margin="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Sound Name -->
                                            <TextBlock Grid.Row="0" 
                                                       Text="{TemplateBinding Content}" 
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center"
                                                       Margin="0,4,0,0"/>

                                            <!-- Center Icon Area -->
                                            <Viewbox Grid.Row="1" Width="40" Height="40" Margin="0,8">
                                                <TextBlock x:Name="IconText" Text="ðŸ”Š" FontSize="32"/>
                                            </Viewbox>

                                            <!-- Status Text -->
                                            <TextBlock x:Name="StatusText"
                                                       Grid.Row="2" 
                                                       Text="Ready"
                                                       FontSize="11"
                                                       Foreground="#AAAAAA"
                                                       TextAlignment="Center"
                                                       Margin="0,0,0,4"/>
                                        </Grid>
                                    </Grid>

                                    <!-- Playback Progress Bar -->
                                    <Border Grid.Row="1" 
                                            Background="#1A1A1A" 
                                            CornerRadius="0,0,10,10"
                                            ClipToBounds="True">
                                        <Grid>
                                            <Border x:Name="ProgressBar" 
                                                    Background="#5B8DEF"
                                                    HorizontalAlignment="Left"
                                                    Width="0"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover State -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#5B8DEF"/>
                                <Setter TargetName="MainBorder" Property="Background" Value="#353535"/>
                            </Trigger>

                            <!-- Pressed State -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PressedOverlay" Property="Opacity" Value="1"/>
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#7AD1FF"/>
                                <Setter TargetName="StatusText" Property="Text" Value="Playing..."/>
                            </Trigger>

                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.5"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Border Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource PanelBackground}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Background="#101010">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Margin="6" Style="{StaticResource CardBorder}" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Width="32" Height="30" Stretch="Fill" Margin="0,0,12,0" Source="/SRshortLogo.png"/>
                    <TextBlock Text="Soundboard" 
                               FontFamily="Segoe UI Black" 
                               FontSize="20"
                               VerticalAlignment="Center" 
                               Foreground="White"/>
                </StackPanel>

                <!-- Center: Grid Info -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="GridInfoText" 
                               Text="Grid: 4 Ã— 3" 
                               FontSize="14"
                               Foreground="#BBBBBB"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="PageInfoText" 
                               Text="Page 1 of 1" 
                               FontSize="14"
                               Foreground="#BBBBBB"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right: Management Buttons -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Button x:Name="PageManagementButton" 
                            Content="ðŸ“„ Pages" 
                            Width="100" 
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource AccentButton}" 
                            Click="PageManagementButton_Click"/>
                    <Button x:Name="GridSettingsButton" 
                            Content="âš™ï¸ Grid Size" 
                            Width="120" 
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource AccentButton}" 
                            Click="GridSettingsButton_Click"/>
                    <Button x:Name="AddSoundButton" 
                            Content="âž• Add Sound" 
                            Width="120" 
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource SuccessButton}" 
                            Click="AddSoundButton_Click"
                            IsEnabled="False"/>
                    <Button x:Name="CloseButton" 
                            Content="Close" 
                            Width="80" 
                            Height="32"
                            Style="{StaticResource RoundedButton}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: Soundboard Grid -->
        <Border Grid.Row="1" Margin="12" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Soundboard Buttons Grid -->
                <ScrollViewer Grid.Row="0" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <UniformGrid x:Name="SoundboardGrid" 
                                 Columns="4" 
                                 Rows="3"
                                 Margin="8"/>
                </ScrollViewer>

                <!-- Bottom: Page Navigation -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                    <Button x:Name="PrevPageButton" 
                            Content="â—€ Previous" 
                            Width="100" 
                            Height="32"
                            Margin="0,0,8,0"
                            Style="{StaticResource RoundedButton}" 
                            Click="PrevPageButton_Click"
                            IsEnabled="False"/>
                    <Button x:Name="NextPageButton" 
                            Content="Next â–¶" 
                            Width="100" 
                            Height="32"
                            Margin="8,0,20,0"
                            Style="{StaticResource RoundedButton}" 
                            Click="NextPageButton_Click"
                            IsEnabled="False"/>

                    <!-- Master Volume Control -->
                    <TextBlock Text="ðŸ”Š" 
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Slider x:Name="MasterVolumeSlider" 
                            Width="150" 
                            Minimum="0" 
                            Maximum="100" 
                            Value="100"
                            VerticalAlignment="Center"
                            ValueChanged="MasterVolumeSlider_ValueChanged"/>
                    <TextBlock x:Name="MasterVolumeLabel" 
                               Text="100%" 
                               Width="45"
                               Foreground="White"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="8,0,20,0"/>

                    <!-- Audio Device Selection -->
                    <TextBlock Text="ðŸŽ§" 
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="AudioDeviceCombo" 
                              Width="200"
                              Height="32"
                              VerticalAlignment="Center"
                              SelectionChanged="AudioDeviceCombo_SelectionChanged"/>

                    <Button x:Name="StopAllButton" 
                            Content="â¹ï¸ Stop All" 
                            Width="110" 
                            Height="32"
                            Margin="20,0,0,0"
                            Style="{StaticResource RoundedButton}" 
                            Click="StopAllButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
